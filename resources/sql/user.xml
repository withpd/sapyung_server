<mapper namespace="user">

	<resultMap id="userResult" type="UserVo">
		<result property="id" column="id" />
		<result property="accessToken" column="accessToken" />
		<result property="name" column="name" />
		<result property="mail" column="mail" />
		<result property="thumbNailImg" column="thumbNailImg" />
		<result property="isEmailValid" column="isEmailValid" />
		<result property="isEmailVerified" column="isEmailVerified" />
		<result property="loginType" column="loginType" />
	</resultMap>
